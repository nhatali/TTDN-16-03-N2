<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_van_ban_den_form" model="ir.ui.view">
            <field name="name">van.ban.den.form</field>
            <field name="model">van_ban_den</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Ví dụ: 135/QĐ-UBND"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="nhan_vien_xu_ly_id"/>
                                <field name="nhan_vien_ky_id"/>
                            </group>
                            <group>
                                <field name="trich_yeu"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_van_ban_den_tree" model="ir.ui.view">
            <field name="name">van.ban.den.tree</field>
            <field name="model">van_ban_den</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="trich_yeu"/>
                    <field name="nhan_vien_xu_ly_id"/>
                </tree>
            </field>
        </record>

        <record id="action_van_ban_den" model="ir.actions.act_window">
            <field name="name">Văn bản đến</field>
            <field name="res_model">van_ban_den</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu được di chuyển sang menu.xml để tập trung quản lý -->
    </data>
</odoo>
