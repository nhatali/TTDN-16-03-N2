<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- FORM -->
    <record id="view_phong_ban_form" model="ir.ui.view">
      <field name="name">phong_ban.form</field>
      <field name="model">phong_ban</field>
      <field name="arch" type="xml">
        <form string="Phòng ban">
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="ten_phong"/>
              </h1>
            </div>

            <group col="4" string="Thông tin chung">
              <field name="ma_phong"/>
              <field name="ngay_thanh_lap"/>
              <field name="truong_phong_id"/>
              <field name="mo_ta" colspan="4"/>
            </group>

            <notebook>
              <page string="Nhân viên">
                <field name="nhan_vien_ids">
                  <tree editable="bottom">
                    <field name="ho_va_ten"/>
                    <field name="ma_dinh_danh"/>
                    <field name="email"/>
                    <field name="so_dien_thoai"/>
                    <field name="luong" sum="Tổng lương"/>
                  </tree>
                </field>
              </page>
            </notebook>

          </sheet>
        </form>
      </field>
    </record>

    <!-- TREE -->
    <record id="view_phong_ban_tree" model="ir.ui.view">
      <field name="name">phong_ban.tree</field>
      <field name="model">phong_ban</field>
      <field name="arch" type="xml">
        <tree string="Phòng ban">
          <field name="ma_phong"/>
          <field name="ten_phong"/>
          <field name="truong_phong_id"/>
          <field name="ngay_thanh_lap"/>
        </tree>
      </field>
    </record>

    <!-- SEARCH -->
    <record id="phong_ban_search" model="ir.ui.view">
      <field name="name">phong_ban.search</field>
      <field name="model">phong_ban</field>
      <field name="arch" type="xml">
        <search string="Tìm phòng ban">
          <field name="ma_phong"/>
          <field name="ten_phong"/>
          <field name="truong_phong_id"/>
          <filter string="Có trưởng phòng" name="has_manager" domain="[('truong_phong_id','!=',False)]"/>
        </search>
      </field>
    </record>

    <!-- ACTION -->
    <record id="action_phong_ban" model="ir.actions.act_window">
      <field name="name">Phòng ban</field>
      <field name="res_model">phong_ban</field>
      <field name="view_mode">tree,form</field>
      <field name="search_view_id" ref="phong_ban_search"/>
    </record>

  </data>
</odoo>
